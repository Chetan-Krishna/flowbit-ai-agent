
{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",             
    "moduleResolution": "node",       
    "strict": true,                   
    "esModuleInterop": true,          
    "skipLibCheck": true,             
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true        
  },
  "include": ["src/**/*"]
}